<div class="container">
  <h1>Book <%= @dragon.nickname %></h1>
  <hr>
  <%= simple_form_for ([@dragon, @booking]) do |f| %>
  <%= f.input :start_date, as: :string, input_html: {class: "book_calendar", "data-unavailable-dates": @unavailable_dates.to_json} %>
  <%= f.input :end_date, as: :string, input_html: {class: "book_calendar", "data-unavailable-dates": @unavailable_dates.to_json} %>
  <%= f.submit 'Book now', data: { confirm: 'Confirm?' } %>
<% end %>
  <hr>
  <%= link_to "Not sure yet, back to the dragon details", dragon_path(@dragon, tab: "current") %>
</div>
