<div class="jumbotron" id="animate-area ">
  <h1 class="display-3">Dragons for rent</h1>
  <h3>Fly My Dragon</h3>
  <p class="lead jumbo-text">Lorem ipsum dolor sit amet consectetur adipisicing elit. Ab mollitia recusandae similique </p>
  <div class="lead cta">
    <%= link_to  "Sign up now",  new_user_registration_path, class: "btn btn-info btn-lg"  %>
  </div>
  <!--navbar-->
  <div class="search-bar">
    <nav class="navbar  navbar-expand-lg  navbar-light bg-light">
      <div class="d-flex row">
        <div class="container-fluid">
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
              <li class="nav-item">
                <form class="d-flex">
                  <input class="form-control me-2" type="search" placeholder="Location" aria-label="Search">
                </form>
              </li>
              <li class="nav-item">
                <form class="d-flex">
                  <input class="form-control me-2" type="search" placeholder="Starts at" aria-label="Search">
                </form>
              </li>
              <li class="nav-item">
                <form class="d-flex">
                  <input class="form-control me-2" type="search" placeholder="Ends at" aria-label="Search">
                  <button class="btn btn-outline-success" type="submit">Search</button>
                </form>
              </li>
            </ul>
          </div>
        </div>
      </nav>
    </div>
  </div>
  <!--navbar end -->
  <div class="container text-center">
    <div class="container">
      <div class="col">
        <div class="row d-lg-flex align-items-center mb-4">
          <div class="row cards mb-4  card-hover">
            <% @dragons.each do |dragon| %>
              <div class="card" style="width: 15rem;">
                <% if dragon.photo.attached? %>
                  <img class="card-img-top rounded-top" src = <%= cl_image_path dragon.photo.key, height: 300, width: 400, crop: :fill %>  alt="Card image cap">
                <%else%>
                  <img class="card-img-top rounded-top" src = <%= image_path 'default_dragon_pic.jpg' %> alt="Card image cap">
                <%end%>
                <div class="card-body">
                  <h5 class="card-title text-left"> <%= link_to "#{dragon.nickname }", dragon_path(dragon)  %> </h5>
                  <p class="card-text text-left"> <%= dragon.description %> </p>
                </div>
                <div class="card-footer text-left">
                  <%= dragon.country %>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    <div id="map"
style="width: 100%; height: 600px;"
data-markers="<%= @markers.to_json %>"
data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>
  </div>
