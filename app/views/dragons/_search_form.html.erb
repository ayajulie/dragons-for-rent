<div class="container search-container">
  <%= form_tag(dragons_path, method: "get") do %>
    <div class="input-group d-flex justify-content-around">
      <div class="form-field">
        <%= search_field_tag :search, params[:search], placeholder: "Which Country?", class: "form-control", autofocus: true %>
      </div>
      <div>
        <%= button_tag raw(' <i class="fas fa-search" aria-hidden="true"></i>'), name: nil %>
      </div>
    </div>
  <% end %>
</div>
